# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# An example controller showing a sample home page
GET           /                                                    controllers.HomeController.roosterMain

GET           /rooster/factions                                    controllers.RoosterController.getFactions()
GET           /rooster/faction/:factionName/troopsForSelect        controllers.RoosterController.getSelectTroopsForFaction(factionName : String)
POST          /rooster/army/addTroop                               controllers.RoosterController.addTroopToSelection()
GET           /rooster/army                                        controllers.RoosterController.getArmy()
DELETE        /rooster/army/troop/:uuid                            controllers.RoosterController.removeTroopFromArmy(uuid:String)
GET           /rooster/army/troop/:uuid/weapons                    controllers.RoosterController.getWeaponsAndItemsForTroop(uuid:String)


# Map static resources from the /public folder to the /assets URL path
GET           /assets/*file                                        controllers.Assets.versioned(path="/public", file: Asset)

GET           /javascripts/routes                                  controllers.HomeController.jsRoutes()
